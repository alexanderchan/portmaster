{
  "name": "portmaster",
  "version": "0.2.0",
  "type": "module",
  "description": "CLI tool that tracks and assigns consistent development ports per project directory",
  "author": "alex@reksie.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexanderchan/portmaster.git"
  },
  "homepage": "https://alexmchan.com",
  "bugs": {
    "url": "https://github.com/alexanderchan/portmaster/issues"
  },
  "keywords": [
    "cli",
